<h1>All Books</h1>
<div id="books">
  <% @books.each do |book| %>
    <h2 class="book-title"><%= book.title %></h2>
    <p>Year: <%= book.year %> </p>
    <p>Pages: <%= book.pages %> </p>
    <p>Total Reviews: <%= book.reviews.count %></p>
    <p>Average Rating: <%= book.average_rating %></p>
  <% end %>
</div>
